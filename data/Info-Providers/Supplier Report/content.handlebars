<html>
    <head>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <script defer src="https://use.fontawesome.com/releases/v5.14.0/js/all.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css">
      <style>
            {#asset  Supplier-Report-styles.css @encoding=utf8}
      </style>
    <title>Informe de proveedores</title>
    </head>
 <body>
    <div class="user-report ">
        <div class="columns">
            <div class="column is-2">
               <img class="image"src="{#asset User-Tecno-Logo.png @encoding=dataURI}"  style="width:200%; max-width:300px;" />
            </div>
            <div class="column info is-8">
                <p class="block1"><b>TECNO MONTAJES</b></p>
                <p class="block"><b>INFORME DE PROVEEDORES</b></p>
            </div>
            <div class="column info is-2"></div>
        </div>
        <table class="table is-bordered is-fullwidth">
            <thead>
                <tr class="text">
                    <td> NO.</td>
                    <td>RAZON SOCIAL</td>
                    <td>NOMBRE CORTO</td>
                    <td>RFC</td>
                    <td>CLAS</td>
                    <td>FORMA DE PAGO</td>
                    <td>D. CREDITO</td>
                    <td>MONEDA</td>
                    <td>BANCO</td>
                    <td>CUENTA / CLABE</td>
                    <td style=" min-width:120px">DIRECCION</td>
                    <td>SUCURSAL</td>                           
                    <td>CALIFICACION </td>
                    <td>ESTATUS</td>
                </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td>{{no}}</td>
                    <td>{{businessname}}</td>
                    <td>{{shortname}}</td>
                    <td>{{rfc}}</td>
                    <td>{{clasification}}</td>
                    <td>{{waytopay}}</td>
                    <td>{{creditdays}}</td>
                    <td>{{coin}}</td>
                    <td>{{bank}}</td>
                    <td>
                        <ul>
                            <li>
                                <b>cuenta:</b> {{account}}
                            </li>
                            <li>
                                <b>clabe:</b> {{clabe}}
                            </li>
                        </ul>
                    </td>
                    <td>{{direction}}</td>
                    <td>{{branchoffice}}</td>
                    <td>{{qualification}}</td>
                    <td class="verde"></td>
                </tr>
             {{/each}}
            </tbody>
        </table>
     </div>
    </body>
</html>